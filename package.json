{
  "name": "eventnet",
  "version": "0.1.2",
  "description": "Not just about flow design.",
  "main": "lib/index.js",
  "typings": "lib/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xyzingh/EventNet.git"
  },
  "keywords": [
    "debugger",
    "debugger-visualizer",
    "eventnet",
    "flowchart",
    "javascript-tools",
    "visual"
  ],
  "author": "X.Y.Z.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xyzingh/EventNet/issues"
  },
  "homepage": "https://eventnet.justlog.xyz/",
  "dependencies": {
    "@types/debug": "0.0.30",
    "@types/ws": "^5.1.2",
    "debug": "^3.1.0",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.0.1",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8"
  },
  "scripts": {
    "build": "tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "",
    "cz": "git-cz",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.{js,ts}",
      "!<rootDir>/lib/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
