{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "module": "commonjs",
        "newLine": "lf",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./lib",
        "strictNullChecks": true,
        "target": "es2017",
        "sourceMap": true,
        "pretty": true,
        "preserveConstEnums": true,
        "stripInternal": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/types.ts",
        "**/*.js"
    ]
}